<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:id="@+id/sideBar"
        android:background="@color/lightBlue">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layouttop_sb">

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/saveButton_sb"
                android:layout_weight="0.5"
                android:background="@drawable/check_icon"/>

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/discardButton_sb"
                android:layout_weight="0.5"
                android:background="@drawable/x_icon"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/content"
            android:id="@+id/content_sb"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentTop="false"
            android:layout_alignParentBottom="false"
            android:gravity="center_horizontal"
            android:layout_below="@+id/layouttop_sb"
            android:layout_marginTop="15dp"
            android:textSize="22sp"
            android:padding="10sp"
            android:background="@color/blue"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/style"
            android:id="@+id/style_sb"
            android:gravity="center_horizontal"
            android:textSize="22sp"
            android:layout_below="@+id/content_sb"
            android:padding="10sp"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:id="@+id/settings_sb"
            android:gravity="center_horizontal"
            android:textSize="22sp"
            android:layout_below="@+id/style_sb"
            android:padding="10sp"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/delete"
            android:id="@+id/delete_sb"
            android:textSize="22sp"
            android:gravity="center_horizontal"
            android:layout_below="@+id/settings_sb"
            android:padding="10sp"
            android:textColor="@color/white" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/contentLayout"
        android:visibility="visible"
        android:background="@color/blue">

        <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/editButton"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_margin="10dp"
                android:background="@drawable/edit_icon"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/discardButton"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:background="@drawable/x_icon"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contentTitle"
            android:layout_below="@+id/editButton"
            android:text="@string/contentTitle"
            android:gravity="center_horizontal"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textColor="@color/white"
            android:inputType="none" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView"
            android:layout_below="@+id/contentTitle">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top|left"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/editor"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="@string/node_placeholder"
                android:padding="10dp"
                android:layout_below="@+id/contentTitle"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:textColor="@color/white" />
        </ScrollView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/styleLayout"
        android:visibility="gone">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/styleTitle"
            android:text="@string/styleTitle"
            android:gravity="center_horizontal"
            android:inputType="none" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/settingsLayout"
        android:visibility="gone">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/settingsTitle"
            android:text="@string/settingsTitle"
            android:gravity="center_horizontal"
            android:inputType="none" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/deleteLayout"
        android:visibility="gone">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/deleteTitle"
            android:gravity="center_horizontal"
            android:text="@string/deleteTitle"
            android:inputType="none" />
    </RelativeLayout>

</LinearLayout>