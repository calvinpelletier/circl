<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:id="@+id/sideBar">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layouttop_sb">

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/editbutton_sb"
                android:layout_weight="0.5"
                android:background="@drawable/check_icon"/>

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/exitbutton_sb"
                android:layout_weight="0.5"
                android:background="@drawable/x_icon"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/content"
            android:id="@+id/content_sb"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentTop="false"
            android:layout_alignParentBottom="false"
            android:gravity="center_horizontal"
            android:layout_below="@+id/layouttop_sb"
            android:layout_marginTop="50dp"
            android:textSize="25sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/style"
            android:id="@+id/style_sb"
            android:gravity="center_horizontal"
            android:textSize="25sp"
            android:layout_below="@+id/content_sb" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:id="@+id/settings_sb"
            android:gravity="center_horizontal"
            android:textSize="25sp"
            android:layout_below="@+id/style_sb" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/delete"
            android:id="@+id/delete_sb"
            android:textSize="25sp"
            android:gravity="center_horizontal"
            android:layout_below="@+id/settings_sb" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/editorLayout">

        <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/button6"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_margin="10dp"
                android:background="@drawable/edit_icon"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/button7"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:background="@drawable/x_icon"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_below="@+id/button6"
            android:text="My note title"
            android:gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView"
            android:layout_below="@+id/editText">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top|left"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/editor"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="@string/node_placeholder"
                android:padding="10dp"
                android:layout_below="@+id/editText"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"/>
        </ScrollView>

    </RelativeLayout>

</LinearLayout>